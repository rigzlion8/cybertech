#!/bin/bash
# Start the app with payment credentials
# Copy this to start_with_payments.sh and fill in your actual credentials

cd /home/rigz/projects/cybertech

# Stop any running instances
pkill -f "python app.py" 2>/dev/null || true
sleep 2

